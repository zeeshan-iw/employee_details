<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_payroll_add_paid_time_off" model="ir.ui.view">
        <field name="name">hr.employee.payroll.add.paid.time.off</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='payroll_information']//field[@name='structure_type_id']" position="after">
                <field name="paid_time_off_readonly" invisible="1"/>
                <field name="paid_time_off"
                       string="Paid Time Off"
                       readonly="paid_time_off_readonly"/>
                <field name="holiday_eligibility_readonly" invisible="1"/>
                <field name="holiday_eligibility"
                       string="Holiday Eligibility"
                       readonly="holiday_eligibility_readonly"/>
            </xpath>
        </field>
    </record>
</odoo>